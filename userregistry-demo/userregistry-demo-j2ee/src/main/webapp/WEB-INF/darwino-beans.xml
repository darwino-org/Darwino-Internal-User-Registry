<beans>

	<!-- Define your J2EE specific beans here, and register a WebInf provider 
		in AppPlugin -->

	<!-- HTTP Security constraints -->
	<property name="c">com.darwino.config.http.HttpConstraintsStatic
	</property>
	<property name="ce">com.darwino.config.http.HttpConstraintsStatic$Constraint
	</property>
	<bean type="darwino/httpconstraint" name="c2" class="${c}"
		alias="local,default">
		<list name="constraints">
			<bean class='${ce}'>
				<property name='urlPattern'>*/$darwino-app/usermgmt</property>
				<list name="groups">
					<value>darwino</value>
				</list>
			</bean>
		</list>
	</bean>
	<bean type="dwo3rd/userregistry" name="userreg"
		class="org.darwino.plugin.userregistry.bean.UserRegistrationBean"
		alias="userregistrydemo">
		<property name="selfRegistration">true</property>
		<property name="databaseName">userregistrydemo</property>
	</bean>

	-
	<bean alias="userregistrydemo" class="org.darwino.plugin.userregistry.j2ee.UserRegistrationDir"
		name="userregDir" type="darwino/userdir">
		<list name="providers">
			<bean class="com.darwino.social.gravatar.GravatarUserProvider"
				enabled="true" />
		</list>
	</bean>
</beans>
